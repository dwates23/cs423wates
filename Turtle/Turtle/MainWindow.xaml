<Window x:Class="TurtleGraphicsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Turtle Graphics" Width="500" Height="500">
    <Grid>
        <Canvas x:Name="canvas" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <TextBox x:Name="commandTextBox" Width="100" Height="30" Margin="10,10,0,0"/>
        <Button Content="Execute" Width="100" Height="30" Margin="120,10,0,0" Click="ExecuteCommandButton_Click"/>
    </Grid>
</Window>

